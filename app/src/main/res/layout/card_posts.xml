    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cViewRead"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="0dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="@string/app_name"
                    android:id="@+id/categoryImage"
                    android:padding="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/readHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/app_name"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:lineSpacingMultiplier="1.2"
                android:layout_toEndOf="@id/categoryImage"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/createdTime"
                    android:text="@string/app_name"
                    android:layout_below="@id/readHeading"
                    android:layout_toEndOf="@id/categoryImage"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:alpha="0.8"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stats"
                    android:text="@string/app_name"
                    android:layout_below="@id/createdTime"
                    android:layout_toEndOf="@id/categoryImage"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="12sp"
                    android:alpha="0.5"
                    />

                <TextView
                    android:id="@+id/readContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Content"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_below="@id/stats"
                    android:ellipsize="end"
                    android:maxLines="2"
                    />

            </RelativeLayout>

